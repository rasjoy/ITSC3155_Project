<h1>Jobs</h1>
<style>#tbl{width=20%;}</style>
<table id="tbl" summary = "Available Jobs">
    <tr>
            <th>Type</th>
            <th>Starting HP</th>
            <th>Hit Dice</th>
            <th>Primary Ability</th>
            <th>First Saving Throw</th>
            <th>Second Saving Throw</th>
            
            <th>Armor Profiencies</th>
         
            <th>Weapon Profiencies</th>
            </tr>
            <tr>
            <th></th>
            <th>Profiencies Bonus</th>
            <th>Skills</th>
            <th>Starting Equipment</th>
            <th>Cantrips</th>
            <th>Spell Slots</th>
            <th>Spells</th>
            <th></th>
           
    </tr>

    <% @jobs.each do |job| %>
    <tr>
        <td><%= job.name%></td>
        <td><%= job.startingHP%></td>
        <td><%= job.hitDice%></td>
        <td><%= job.primaryAbility%></td>
        <td><%= job.savingThrow1%></td>
        <td><%= job.savingThrow2%></td>
        <td><%= job.armorPref%></td>
       
        <td><%= job.weaponPref%></td>
        </tr><tr>
            <td></td>
        <td><%= job.profBonus%></td>
        <td><%= job.skills%></td>
        <td><%= job.startingEquip%></td>
        <td><%= job.cantrip%></td>
        <td><%= job.spellSlots%></td>
        <td><%= job.spells%></td>
        <td></td>
        
    </tr>
    <tr>
        <br>
    </tr>
    <% end %>
    
</table>

